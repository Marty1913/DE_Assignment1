{
  "steps": [
	{
       "name": "gcr.io/cloud-builders/gsutil",
       "args": [
           "cp",
		   "gs://model_repo_de2022_2109377/model.sav",
           "./Assignment 1/prediction-ui-embedded-gcs"
        ]
    },
    {
      "name": "python",
      "entrypoint": "/DE_Assignment1",
      "args": [
        "-c",
        "cd ./Assignment\ 1/prediction-ui-embedded-gcs && python3 -m venv .myenv && . .myenv/bin/activate && pip install -r requirements_dev.txt && python3 -m pytest --junitxml=${SHORT_SHA}_test_log.xml",
        "--user"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1",
        "./Assignment 1/prediction-ui-embedded-gcs"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
       "args": [
        "run",
        "deploy",
        "prediction-service",
        "--image",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated"
      ]
    }
  ]
}
