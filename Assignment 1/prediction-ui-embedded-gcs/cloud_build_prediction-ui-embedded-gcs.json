{
  "steps": [
	{
       "name": "gcr.io/cloud-builders/gsutil",
       "args": [
           "cp",
		   "gs://model_repo_de2022_2109377/model.sav",
           "./Assignment 1/prediction-ui-embedded-gcs"
        ]
    },
    {
      "name": "python",
      "entrypoint": "pip",
      "args": [
        "install",
        "-r",
        "./Assignment 1/prediction-ui-embedded-gcs/requirements_dev.txt"
      ]
    },
    {
      "name": "python",
      "entrypoint": "python",
      "args": [
        "-m",
        "-pytest",
        "--junitxml=$(SHORT_SHA)_test_log.xml"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "build",
        "-t",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1",
        "./Assignment 1/prediction-ui-embedded-gcs"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/docker",
      "args": [
        "push",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1"
      ]
    },
    {
      "name": "gcr.io/google.com/cloudsdktool/cloud-sdk",
      "entrypoint": "gcloud",
       "args": [
        "run",
        "deploy",
        "prediction-service",
        "--image",
        "gcr.io/$PROJECT_ID/prediction-ui-embedded-gcs:0.0.1",
        "--region",
        "us-central1",
        "--platform",
        "managed",
        "--allow-unauthenticated"
      ]
    }
  ]
}
